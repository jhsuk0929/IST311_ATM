<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
   <children>
      <Label layoutX="295.0" layoutY="50.0" text="ATM by Group 8">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="accountNumberField" layoutX="351.0" layoutY="174.0" prefHeight="31.0" prefWidth="180.0" promptText="Example: testUser">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <PasswordField fx:id="passwordField" layoutX="351.0" layoutY="236.0" prefHeight="31.0" prefWidth="180.0" promptText="Example: testPass">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <Button fx:id="submitButton" defaultButton="true" layoutX="373.0" layoutY="343.0" mnemonicParsing="false" onAction="#handleSubmitButton" style="-fx-background-color: #4ad448;" text="SUBMIT">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="cancelButton" cancelButton="true" layoutX="274.0" layoutY="343.0" mnemonicParsing="false" onAction="#handleCancelButton" style="-fx-background-color: #e8594f;" text="CANCEL">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="203.0" layoutY="179.0" text="Account Number:">
         <font>
            <Font size="15.0" />
         </font></Label>
      <Label layoutX="203.0" layoutY="241.0" text="Account Password:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="invaildLoginLabel" layoutX="217.0" layoutY="277.0" opacity="0.0" text="ACCOUNT NUMBER OR PASSWORD IS INCORRECT" textFill="#e8594f">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
      <Label layoutX="226.0" layoutY="80.0" text="ENTER YOUR LOGIN INFORMATION TO CONTINUE">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
